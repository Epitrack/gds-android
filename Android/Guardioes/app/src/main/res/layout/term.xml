<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_view_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="25dp"
            android:src="@drawable/image_logo_blue"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/message_about_content_01"
            android:layout_alignStart="@+id/message_about_content_01"
            android:layout_below="@+id/image_view_logo"
            android:text="@string/terms_title_01"
            android:textColor="@color/grey"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/message_about_content_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_view_logo"
            android:layout_margin="30dp"
            android:text="@string/terms_content_01"
            android:textColor="@color/grey"
            android:textSize="15sp"/>

    </RelativeLayout>

</ScrollView>