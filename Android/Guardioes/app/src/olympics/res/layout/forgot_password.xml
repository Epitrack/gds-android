<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/image_logo_white"/>

    <TextView
        android:id="@+id/textView"
        style="@style/TextHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="42dp"
        android:text="@string/forgot_password"
        android:textSize="15dp"/>

    <EditText
        android:id="@+id/edit_text_email_forgot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="53dp"
        android:hint="@string/hint_mail"
        android:inputType="textEmailAddress"
        android:maxLength="100"
        android:textColor="@android:color/white"
        android:textColorHint="@color/translucent_white_light"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/button_forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edit_text_email_forgot"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/edit_text_email_forgot"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/selector_button_gold_white"
        android:text="@string/send"
        android:textColor="@android:color/white"/>


</RelativeLayout>