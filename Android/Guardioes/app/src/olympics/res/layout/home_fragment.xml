<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:layout="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_olympics">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/image_home_top"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:src="@drawable/image_home_bottom"/>

    <com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/image_view_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        layout:siBorderWidth="0dp"/>

    <TextView
        android:id="@+id/text_view_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_view_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/message_hello"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp">

        <ImageView
            android:id="@+id/image_view_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_join"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image_view_join"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal"
            android:text="@string/join"
            android:textColor="@android:color/white"
            android:textSize="12sp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/text_view_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/relative_layout"
        android:layout_marginEnd="18dp"
        android:layout_toStartOf="@+id/relative_layout"
        android:drawableTop="@drawable/icon_notice"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="@string/notice"
        android:textColor="@color/white"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/text_view_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/relative_layout"
        android:layout_marginStart="18dp"
        android:layout_toEndOf="@+id/relative_layout"
        android:drawableTop="@drawable/icon_map"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="@string/map_health_1"
        android:textColor="@color/white"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/text_view_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_layout"
        android:layout_marginEnd="-15dp"
        android:layout_marginTop="-25dp"
        android:layout_toStartOf="@+id/relative_layout"
        android:drawableTop="@drawable/icon_tip"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="@string/tip_health_1"
        android:textColor="@color/white"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/text_view_diary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_layout"
        android:layout_marginStart="-15dp"
        android:layout_marginTop="-25dp"
        android:layout_toEndOf="@+id/relative_layout"
        android:drawableTop="@drawable/icon_diary"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="@string/diary_health_1"
        android:textColor="@color/white"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/text_view_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:drawableTop="@drawable/icon_game"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="@string/game_enjoy"
        android:textColor="@color/white"
        android:textSize="12sp"/>

</RelativeLayout>